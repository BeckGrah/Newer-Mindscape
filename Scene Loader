using System.Collections;
using System.Collections.Generic;
using Unity.VisualScripting;
using UnityEngine;
using UnityEngine.SceneManagement;

public class SwitchScene : MonoBehaviour

{
    [SerializeField] public string Scene_Name;
    private bool time_passed = false;
    [SerializeField] private GameObject cam_transition;
    [SerializeField] private GameObject cam;
    [SerializeField] private float speed;
    private AudioListener audio_listener;
    private GameObject vcam;
    

    // Start is called before the first frame update
    void Start()
    {
        StartCoroutine(wait());
    }

    // Update is called once per frame
    void Update()
    {

    }
    void OnTriggerEnter2D(Collider2D collision)
    {
        if (time_passed == true)
        {
            SceneManager.LoadScene(sceneName: Scene_Name, LoadSceneMode.Additive);
            vcam = GameObject.FindWithTag("vcam");
            Destroy(vcam.GetComponent("Cinemachine Confiner (Script)"));
            cam = GameObject.FindWithTag("MainCamera");
            cam_transition = GameObject.FindWithTag("cam transition");
            audio_listener = cam.GetComponent<AudioListener>();
            audio_listener.enabled =! audio_listener.enabled;
            move_cam();
        }
    }
    IEnumerator wait()
    {
        yield return new WaitForSeconds(.5f);
        time_passed = true;
    }

    void move_cam()
    {
        cam.transform.position = Vector2.MoveTowards(cam.transform.position, cam_transition.transform.position, speed * Time.deltaTime);
    }
}
